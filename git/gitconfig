    quotepath = false
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    # signingkey =
[color]
    ui = auto
[color "branch"]
    current = yellow black
    local = yellow
    remote = magenta
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red reverse
    new = green reverse
    whitespace = white reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan reverse
    branch = magenta
